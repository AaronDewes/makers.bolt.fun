datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id      Int       @id @default(autoincrement())
  title   String
  Project Project[]
}

model Project {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  website         String
  thumbnail_image String
  cover_image     String
  category        Category @relation(fields: [category_id], references: [id])
  category_id     Int
}
